{{!--Setup the main.handlebars file --}}
{{!--so it's able to be used by Handlebars.--}}

<h1>Burgers!</h1>

<h2>Add a Burger</h2>
{{!--coors 2 backend...data sent to backend--}}
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger, baby!</button>
</form>

<h2>Burgers to eat:</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">DEVOUR!</button>
        </form>

        {{!--{{> burgers/delete-burger}}--}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Burgers eaten:</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Eat it again!</button>
        </form>

        {{!--{{> burgers/delete-burger}}--}}
      </li>
    {{/unless}}
  {{/each}}
</ul>


